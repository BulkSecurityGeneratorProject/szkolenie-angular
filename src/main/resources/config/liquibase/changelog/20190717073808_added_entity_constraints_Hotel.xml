    <!--
        Added the constraints for entity Hotel.
    -->
    <changeSet id="20190717073808-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="hotel_id"
                                 baseTableName="hotel_room"
                                 constraintName="fk_hotel_room_hotel_id"
